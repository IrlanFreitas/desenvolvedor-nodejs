<html>
        <head>
            <meta charset="utf-8">
            <title>Overthiking Projects</title>
        </head>
        <body>
            <h1> Listagem de livros </h1>

            <table>
                <tr>
                    <td>ID</td>
                    <td>Título</td>
                </tr>
                <!-- Usando interpolação do marko -->
                <tr for (livro in data.livros) >
                <!-- Usando marko expression -->
                    <td>${livro.id}</td>
                    <td>${livro.titulo}</td>
                </tr>
            </table>

        </body>
</html>